<h2>Show Comment</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @comment.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @comment.body %>
  </li>

  <li>
    <strong>Article:</strong>
    <%= @comment.article_id %>
  </li>

  <li>
    <strong>User:</strong>
    <%= @comment.user_id %>
  </li>

</ul>

<span><%= link "Edit", to: article_comment_path(@conn, :edit, @article, @comment) %></span>
<span><%= link "Back", to: article_comment_path(@conn, :index, @article) %></span>
